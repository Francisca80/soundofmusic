{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "custom": {
      "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "2rem",
        "lg": "4rem",
        "xl": "8rem"
      }
    },
    "spacing": {
      "units": ["rem", "em", "px", "%"],
      "spacingScale": {
        "steps": 5,
        "mediumStep": 8
      }
    },
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#121212",
          "name": "Charcoal"
        },
        {
          "slug": "secondary",
          "color": "#B9FF66",
          "name": "Electric"
        },
        {
          "slug": "dark-accent",
          "color": "#1a2e35",
          "name": "Dark Accent"
        },
        {
          "slug": "background",
          "color": "#FFFFFF",
          "name": "Background"
        },
        {
          "slug": "text",
          "color": "#121212",
          "name": "Text"
        },
        {
          "slug": "text-secondary",
          "color": "#ffffff",
          "name": "Text Secondary"
        },
        {
          "slug": "gray-background",
          "color": "#FCF9FA",
          "name": "Gray Background"
        },
        {
          "slug": "muted",
          "color": "#999999",
          "name": "Muted"
        },
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, sans-serif",
          "slug": "inter",
          "name": "Inter"
        },
        {
          "fontFamily": "Manrope, sans-serif",
          "slug": "manrope",
          "name": "Manrope"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "xlarge",
          "size": "2rem",
          "name": "X-Large"
        }
      ],
      "lineHeight": {
        "normal": "1.6",
        "compact": "1.3",
        "loose": "1.8"
      }
    }
  },
  "styles": {
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--secondary)",
          "text": "var(--wp--preset--color--primary)"
        },
        "border": {
          "radius": "8px"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "spacing": {
      "padding": "var(--custom--spacing--md)"
    }
  }
}
